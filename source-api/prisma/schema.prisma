generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Frecuencia {
  MONTHLY
  ANNUAL
}

model Gasto {
  id          Int        @id @default(autoincrement())
  descripcion String
  monto       Float
  fechaPago   Int         // 1â€“31
  frecuencia  Frecuencia  @default(MONTHLY)
}
